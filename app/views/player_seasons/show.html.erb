  <% @seasons.each do |season| %>
    <!-- Button trigger modal -->
    <% if  current_user.forecasts.find_by(season_id: season.id) == nil %>
    <% else %>
      <button type="button" class="info typopo btn btn-light mb-5" data-toggle="modal" data-target="#seasonModalCenter-<%=season.id%>" data-whatever="@seasons">
