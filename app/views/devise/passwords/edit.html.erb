<div class="main mt-3 pb-5">
  <h2>Change ton mot de passe</h2>
</div>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>
<div class="main pb-5">
  <div class="form-inputs">
    <%= f.input :password,
                label: "Nouveau mot de passe",
                required: true,
                autofocus: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "nouveau mot de passe" } %>
    <%= f.input :password_confirmation,
                label: "Confirme ton nouveau mot de passe",
                required: true,
                input_html: { autocomplete: "nouveau mot de passe" } %>
  </div>
  </div>
  <div class="main pb-5">
    <div class="form-actions">
      <%= f.button :submit, "Change ton mot de passe", :class => "rejoins_1 text-white" %>
    </div>
  </div>
<% end %>
