<%= form_for @article do |f| %>
  <div class="d-flex justify-content-center">
    <div class="col-xs-12">
      <div class="form-group">
        <p>
          <%= f.label :title %>
        </p>
      </div>
      <div class="col-sm-6">
        <p>
          <%= f.text_field :title, placeholder: "Titre", autofocus: true %>
        </p>
      </div>
        <div class="form-group">
          <p>
            <%= f.label :description %><br>
          </p>
        </div>
        <%#= f.input :photo, as: :file %>
        <div class="col-sm-6">
          <p>
            <%= f.text_area :description, placeholder: "Description SEO", autofocus: true %>
          </p>
        </div>
        <div class="form-group">
          <p>
            <%= f.label :text %><br>
          </p>
        </div>
          <p>
            <%= f.rich_text_area :text, height: "300px", width:"300px" %>
          </p>
          <p>
          <%= f.submit %>
        </p>
   </div>
  </div>
<% end %>
